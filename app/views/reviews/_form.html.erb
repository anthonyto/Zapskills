      <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
      <% @review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<h1>Write A Review</h1>
  <div class="form-group">
    <%= f.label :skill_id %>*<br />
		<%= f.select :skill_id, options_from_collection_for_select(@skills, :id, :name), required: true, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :stars %>*<br />
		<%= f.select :stars,((1..5).map {|i| [i,i] }), required: true %>
  </div>
  <div class="form-group">
    <%= f.label :body %>*<br />
    <%= f.text_area :body, required: true, autofocus: true, class: "form-control" %>
  </div>
	
  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
	
<% end %>