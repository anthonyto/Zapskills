<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

		
	<h1>Update Profile</h1>
	<br \>
  <div class="form-group">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true, class: "form-control", required: true %>
  </div>
			
  <div class="form-group">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autofocus: true, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :city %><br />
    <%= f.text_field :city, autofocus: true, class: "form-control", required: true %>
  </div>

	<div class="form-group">
    <%= f.label :state %><br>
		<%= f.select :state, options_for_select(us_states, "WI"), required: true %>
	</div>

  <div class="form-group">
    <%= f.label :zip_code %><br />
    <%= f.text_field :zip_code, autofocus: true, class: "form-control", required: true %>
  </div>
	
  <div class="form-group">
    <%= f.label :avatar %>
    <%= f.file_field :avatar %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: "btn btn-primary btn-sm" %>
  </div>
	

<% end %>
